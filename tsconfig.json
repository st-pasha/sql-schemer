{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ES2023"],
    "target": "ES2023",
    "module": "NodeNext",
    "allowJs": false,

    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noPropertyAccessFromIndexSignature": true
  }
}
